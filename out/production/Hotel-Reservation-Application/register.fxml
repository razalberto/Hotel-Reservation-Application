<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="registration.controllers.RegistrationController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Registration" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>


    <Label text="Full name/Hotel name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Adress:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="adressField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="E-mail:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>

    <ChoiceBox fx:id="role" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
    </ChoiceBox>


    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="9">
        <Button  text="Register"/>
    </HBox>

</GridPane>
